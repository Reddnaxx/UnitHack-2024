{
  "plugins": [
    "prettier",
    "@tanstack/query"
  ],
  "extends": [
    "next/core-web-vitals",
    "prettier",
    "plugin:@tanstack/eslint-plugin-query/recommended"
  ],
  "rules": {
    "sort-imports": [
      "error",
      {
        "ignoreCase": false,
        "ignoreDeclarationSort": true,
        "ignoreMemberSort": false,
        "memberSyntaxSortOrder": [
          "none",
          "all",
          "multiple",
          "single"
        ],
        "allowSeparatedGroups": true
      }
    ]
  }
}
